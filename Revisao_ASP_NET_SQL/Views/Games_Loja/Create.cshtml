@model Revisao_ASP_NET_SQL.Models.Game_Loja

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Games_Loja</h4>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">

                <label asp-for="GameId" class="control-label"></label>
                <select asp-for="GameId" class="form-control">

                    @foreach (Revisao_ASP_NET_SQL.Models.Game game in ViewBag.Games) {
                        <option value="@game.Id">@game.Nome</option>
                    }

                </select>
                <span asp-validation-for="GameId" class="text-danger"></span>

            </div>

            <div class="form-group">

                <label asp-for="LojaId" class="control-label"></label>
                <select asp-for="LojaId" class="form-control">

                    @foreach (Revisao_ASP_NET_SQL.Models.Loja loja in ViewBag.Lojas) {
                        <option value="@loja.Id">@loja.Nome</option>
                    }

                </select>
                <span asp-validation-for="LojaId" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
